# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                          controllers.SkulkingController.index
POST       /registry                  controllers.SkulkingController.registry
POST       /login                     controllers.SkulkingController.login
GET        /rooms                     controllers.SkulkingController.rooms
GET        /connect                   controllers.SkulkingController.connect

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
